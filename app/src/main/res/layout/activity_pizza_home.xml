<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/restaurantb"
    android:orientation="vertical"
    tools:context=".pizzaHome">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="1dp">

            <TextView
                android:id="@+id/textView09"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/berkshire_swash"
                android:text="@string/res_pizza"
                android:textAlignment="center"
                android:textColor="?android:attr/colorForeground"
                android:textSize="50sp" />

            <ImageView
                android:id="@+id/pizza1"
                android:layout_width="match_parent"
                android:layout_height="341dp"
                android:paddingBottom="20dp"
                app:srcCompat="@drawable/pizza0" />

            <ImageView
                android:id="@+id/pizza2"
                android:layout_width="match_parent"
                android:layout_height="341dp"
                android:paddingBottom="20dp"
                app:srcCompat="@drawable/pizza01" />

            <ImageView
                android:id="@+id/pizza3"
                android:layout_width="match_parent"
                android:layout_height="341dp"
                android:paddingBottom="20dp"
                app:srcCompat="@drawable/pizza3" />

            <ImageView
                android:id="@+id/pizza4"
                android:layout_width="match_parent"
                android:layout_height="341dp"
                android:paddingBottom="20dp"
                app:srcCompat="@drawable/pizza2" />







        </LinearLayout>

    </ScrollView>

</LinearLayout>

