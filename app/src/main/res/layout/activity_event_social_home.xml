<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/eventb"
    tools:context=".event_social_home">


    <LinearLayout
        android:layout_width="390dp"
        android:layout_height="264dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="1dp"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:fontFamily="@font/aclonica"
            android:paddingTop="10dp"
            android:text="@string/social_events"
            android:textAlignment="center"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="30sp"
            android:textStyle="bold|italic" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/e2" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="392dp"
        android:layout_height="387dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="264dp"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="383dp"
            android:orientation="vertical">


            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="76dp"
                android:fontFamily="@font/berkshire_swash"
                android:paddingTop="20dp"
                android:text="@string/service_includes"
                android:textAlignment="center"
                android:textColor="@android:color/holo_red_light"
                android:textSize="26sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:fontFamily="@font/berkshire_swash"
                android:paddingLeft="10dp"
                android:text="@string/holiday_parties"
                android:textColor="@android:color/holo_green_dark"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:fontFamily="@font/berkshire_swash"
                android:paddingLeft="10dp"
                android:text="@string/seasoned_celebration"
                android:textColor="@android:color/holo_green_dark"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:fontFamily="@font/berkshire_swash"
                android:paddingLeft="10dp"
                android:text="@string/get_to_gehters"
                android:textColor="@android:color/holo_green_dark"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:fontFamily="@font/berkshire_swash"
                android:paddingLeft="10dp"
                android:text="@string/night_outs"
                android:textColor="@android:color/holo_green_dark"
                android:textSize="20sp"
                android:textStyle="bold" />


        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/T_btn_book"
        android:layout_width="284dp"
        android:layout_height="45dp"
        android:layout_marginTop="668dp"
        android:background="@android:drawable/button_onoff_indicator_off"
        android:backgroundTint="#F44336"
        android:fontFamily="@font/berkshire_swash"
        android:text="New Booking"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/linearLayout4"
        app:layout_constraintStart_toEndOf="@+id/linearLayout4"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/t_btn_view"
        android:layout_width="284dp"
        android:layout_height="45dp"
        android:layout_marginTop="724dp"
        android:background="@android:drawable/button_onoff_indicator_off"
        android:backgroundTint="@android:color/holo_green_light"
        android:fontFamily="@font/berkshire_swash"
        android:text="View Bookings"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/linearLayout4"
        app:layout_constraintStart_toEndOf="@+id/linearLayout4"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>